{
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "browser": true
    },
    "globals": {
        "basis": true,
        "resource": true,
        "asset": true,
        "rempl": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-duplicate-case": "error",
        "no-undef": "error",
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used"
            }
        ]
    }
}