<b:style src="./bottom.css"/>
<b:isolate/>

<b:include src="app.ui.bottomBar">
  <b:append b:ref="content">
    <div b:hide="{fileName}">
      No file from the bundle is editing
    </div>
    <div b:show="{fileName}">
      <div>
        <b>File:</b> {fileName} ({fileSize})
      </div>
      <div b:show="{outputAmount}">
        <b>Output size:</b> {outputAmount} {l10n:module.{outputAmount}} in {outputSize}
      </div>
      <div b:show="{requiredAmount}">
        <b>Require:</b> {requiredAmount} {l10n:module.{requiredAmount}} in {requiredSize}
      </div>
      <div b:show="{retainedAmount}">
        <b>Retained:</b> {retainedAmount} {l10n:module.{retainedAmount}} in {retainedSize}
      </div>
      <div b:show="{exclusiveAmount}">
        <b>Exclusive:</b> {exclusiveAmount} {l10n:module.{exclusiveAmount}} in {exclusiveSize}
      </div>
    </div>
  </b:append>
</b:include>
