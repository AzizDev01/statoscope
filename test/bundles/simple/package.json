{
  "name": "simple",
  "version": "1.0.0",
  "main": "./src/index.js",
  "scripts": {
    "build": "npm run build:dev && npm run build:prod",
    "build:dev": "MODE=development ../node_modules/.bin/webpack -o dist-dev --mode=development",
    "validate:dev": "../../../packages/cli/bin/cli.js validate --input stats-dev.json --config statoscope.config.dev.js",
    "replace-dirname:dev": "cat stats-dev.json | sed \"s#$(pwd)#.#g\" | sed \"s#$(dirname \"$(pwd)..\")#..#g\" > stats-dev.json",
    "postbuild:dev": "npm run validate:dev && npm run replace-dirname:dev",
    "build:prod": "MODE=production ../node_modules/.bin/webpack -o dist-prod --mode=production",
    "validate:prod": "../../../packages/cli/bin/cli.js validate --input stats-prod.json --config statoscope.config.prod.js",
    "replace-dirname:prod": "cat stats-prod.json | sed \"s#$(pwd)#.#g\" | sed \"s#$(dirname \"$(pwd)..\")#..#g\" > stats-prod.json",
    "postbuild:prod": "npm run validate:prod && npm run replace-dirname:prod"
  },
  "dependencies": {
    "foo": "1.0.0",
    "bar": "1.0.0"
  }
}
