{
  "name": "statoscope",
  "private": true,
  "description": "A tool for analyzing the stats of the bundles",
  "license": "MIT",
  "scripts": {
    "test:ci": "npm run test -- --ci --coverage",
    "test": "jest",
    "pretest": "cd test/bundles && npm ci && cd ../..",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap",
    "lint": "npm run lint:eslint && npm run lint:ts",
    "lint:ts": "lerna exec -- tsc --noEmit",
    "lint:eslint": "eslint . --ext .js,.ts --cache",
    "lint:eslint:fix": "npm run lint:script -- --fix",
    "build": "lerna run build",
    "prepublishOnly": "npm run build && npm run lint && npm run test"
  },
  "repository": "https://github.com/statoscope/statoscope",
  "author": {
    "name": "Serget Melyukov",
    "url": "https://twitter.com/smelukov"
  },
  "bugs": {
    "url": "https://github.com/statoscope/statoscope/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.[jt]s": [
      "eslint --cache --fix"
    ]
  },
  "homepage": "https://github.com/statoscope/statoscope",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-jest": "^27.0.2",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  }
}
